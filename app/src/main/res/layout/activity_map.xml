<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Map">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/mappage"

        >

        <RelativeLayout
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_350sdp"
                    >
                    <fragment
                        android:id="@+id/map_f"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="start"
                        android:gravity="center"
                        >
                        <LinearLayout
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackground"

                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/g_color"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                >
                                <ImageView
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:padding="@dimen/_4sdp"
                                    android:tint="@color/white"
                                    android:src="@drawable/location_pin_24"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_4sdp"
                                    android:layout_marginRight="@dimen/_3sdp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Address:"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_19ssp"
                                        android:fontFamily="@font/font"
                                        android:textStyle="bold"
                                        />

                                    <TextView
                                        android:id="@+id/address_copy"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto"
                                        android:text="Shamimabad, Bagbari, Sylhet - 3100 Bangladesh "
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12ssp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/mail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackground"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="start"
                                android:background="@drawable/g_color6"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                >
                                <ImageView
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:padding="@dimen/_8sdp"
                                    android:tint="@color/white"
                                    android:src="@drawable/email_24"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_4sdp"
                                    android:layout_marginRight="@dimen/_3sdp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Contact:"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_19ssp"
                                        android:fontFamily="@font/font"
                                        android:textStyle="bold"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto"
                                        android:text="info@siu.edu.bd"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12ssp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/contact2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackground"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/g_color2"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                >
                                <ImageView
                                    android:layout_width="@dimen/_60sdp"
                                    android:layout_height="@dimen/_60sdp"
                                    android:padding="@dimen/_8sdp"
                                    android:tint="@color/white"
                                    android:src="@drawable/call_24"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_4sdp"
                                    android:layout_marginRight="@dimen/_3sdp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Lets Talk:"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_19ssp"
                                        android:fontFamily="@font/font"
                                        android:textStyle="bold"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/roboto"
                                        android:text="PABX: 029966-36771, 02996633319 \nFax: 02996636002 \nMobile: +8801754313182 "
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12ssp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:background="@color/white"
                            android:padding="@dimen/_8sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            >

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:backgroundTint="@color/bg"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:id="@+id/c_youtube"
                                app:cardCornerRadius="@dimen/_10sdp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@drawable/youtube"/>

                                    <TextView
                                        android:id="@+id/textView"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="#dc1e76" />

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:backgroundTint="@color/bg"
                                android:clickable="true"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:id="@+id/c_fb"
                                android:foreground="?attr/selectableItemBackground"
                                app:cardCornerRadius="@dimen/_10sdp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@drawable/fb1"/>

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:backgroundTint="@color/bg"
                                android:clickable="true"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:id="@+id/c_instragram"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:foreground="?attr/selectableItemBackground"
                                app:cardCornerRadius="@dimen/_10sdp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@drawable/instagram"/>

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>






                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>




            </LinearLayout>



        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/white"
        android:id="@+id/detials">


        <LinearLayout
            android:id="@+id/detialspage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/detislsbg"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_43sdp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_3sdp"

                >

                <ImageView
                    android:id="@+id/detialsback"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:padding="@dimen/_9sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/circle"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:src="@drawable/back" />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/detialspic"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="@dimen/_200sdp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                android:background="@drawable/corved"
                android:layout_gravity="center"
                android:elevation="@dimen/_3sdp"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_3sdp"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_210sdp"
                    android:layout_height="@dimen/_190sdp"
                    android:elevation="12dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_gravity="center"
                    android:shape="ring"
                    android:thicknessRatio="1.9">

                    <ImageView

                        android:layout_height="@dimen/_200sdp"
                        android:layout_width="match_parent"
                        android:id="@+id/show_pic"
                        android:src="@drawable/pic"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true">
                    </ImageView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#C02E2D2D">

                <TextView
                    android:id="@+id/show_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chairman"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/_20sdp"
                    android:fontFamily="@font/font"
                    android:paddingTop="@dimen/_4sdp"
                    android:layout_gravity="center"
                    android:paddingBottom="@dimen/_7sdp"
                    android:gravity="center"/>

            </LinearLayout>


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_below="@+id/detialspage">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/show_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."
                    android:textSize="@dimen/_15ssp"
                    android:enabled="true"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:focusable="true"
                    android:longClickable="true"
                    android:scrollbars="vertical"
                    android:textIsSelectable="true"
                    android:textColor="#000000"
                    android:padding="@dimen/_15sdp"
                    android:justificationMode="inter_word"
                    android:fontFamily="@font/kalpurush"
                   />

            </LinearLayout>

        </ScrollView>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
