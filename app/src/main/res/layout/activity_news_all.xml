                android:id="@+id/vc_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:scrollbars="vertical"
                />


        </LinearLayout>
