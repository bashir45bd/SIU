<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home1"
    tools:openDrawer="star"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottom_nav"
            android:visibility="visible"
            >
            <LinearLayout
                android:id="@+id/bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.appbar.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <com.google.android.material.appbar.MaterialToolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@color/color"
                        app:navigationIcon="@drawable/menu_open_24"
                        app:navigationIconTint="@color/white"
                        app:title="@string/appfullname"
                        app:titleTextColor="@color/white"
                        />
                </com.google.android.material.appbar.AppBarLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/bar"
                android:background="@drawable/corved">


            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_145sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_below="@+id/bar"
                android:elevation="@dimen/_10sdp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_7sdp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/g_color"
                    >


                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_130sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/anim" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Achieve Your Dreams with SIU"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15ssp"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:layout_marginTop="@dimen/_35sdp"
                            android:fontFamily="@font/roboto"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Innovate Now"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold"
                            android:gravity="start"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/roboto"/>

                    </LinearLayout>





                </LinearLayout>




            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Key Features"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/color"
                android:fontFamily="@font/font"
                android:layout_below="@+id/slider"
                android:layout_marginLeft="@dimen/_22sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="start"
                />

            <LinearLayout
                android:id="@+id/item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_below="@+id/text"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:elevation="@dimen/_5sdp"
                android:orientation="vertical">



                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">


                            <androidx.cardview.widget.CardView
                                android:id="@+id/dep"
                                android:layout_width="@dimen/_110sdp"
                                android:layout_height="@dimen/_75sdp"
                                android:backgroundTint="#ECECEC"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground"
                                app:cardCornerRadius="@dimen/_7sdp"

                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:background="@drawable/g_color"
                                    >

                                    <ImageView
                                        android:layout_width="@dimen/_48sdp"
                                        android:layout_height="@dimen/_45sdp"
                                        android:layout_gravity="center"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/department"
                                        android:tint="@color/white"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:fontFamily="@font/roboto"
                                        android:text="Departments"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_14ssp"
                                        android:textStyle="bold" />


                                </LinearLayout>


                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/all_notice"
                                android:layout_width="@dimen/_110sdp"
                                android:layout_height="@dimen/_75sdp"
                                android:layout_marginLeft="15dp"
                                android:backgroundTint="#ECECEC"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground"
                                app:cardCornerRadius="@dimen/_7sdp"
                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:background="@drawable/g_color3"
                                    >

                                    <ImageView
                                        android:layout_width="@dimen/_48sdp"
                                        android:layout_height="@dimen/_45sdp"
                                        android:layout_gravity="center"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/notice"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        app:tint="@color/white" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="All Notice"
                                        android:fontFamily="@font/roboto"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_14ssp"
                                        android:textStyle="bold" />


                                </LinearLayout>


                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <androidx.cardview.widget.CardView
                                android:id="@+id/admission"
                                android:layout_width="@dimen/_110sdp"
                                android:layout_height="@dimen/_75sdp"
                                android:backgroundTint="#ECECEC"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground"
                                app:cardCornerRadius="@dimen/_7sdp"

                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:background="@drawable/g_color2"
                                    >

                                    <ImageView
                                        android:layout_width="@dimen/_48sdp"
                                        android:layout_height="@dimen/_45sdp"
                                        android:layout_gravity="center"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/admission"
                                        android:tint="@color/white"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:text="Admission"
                                        android:fontFamily="@font/roboto"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_14ssp"
                                        android:textStyle="bold" />


                                </LinearLayout>


                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/authority"
                                android:layout_width="@dimen/_110sdp"
                                android:layout_height="@dimen/_75sdp"
                                android:layout_marginLeft="15dp"
                                android:backgroundTint="#ECECEC"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground"
                                app:cardCornerRadius="@dimen/_7sdp"

                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:orientation="vertical"
                                    android:gravity="center
"
                                    android:background="@drawable/g_color4"
                                    >

                                    <ImageView
                                        android:layout_width="@dimen/_48sdp"
                                        android:layout_height="@dimen/_45sdp"
                                        android:layout_gravity="center"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/authority"
                                        android:tint="@color/white"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Authority"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:fontFamily="@font/roboto"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_14ssp"
                                        android:textStyle="bold" />


                                </LinearLayout>


                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <androidx.cardview.widget.CardView
                                android:id="@+id/event"
                                android:layout_width="@dimen/_110sdp"
                                android:layout_height="@dimen/_75sdp"
                                android:backgroundTint="#ECECEC"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground"
                                app:cardCornerRadius="@dimen/_7sdp"

                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:background="@drawable/g_color5"
                                    >

                                    <ImageView
                                        android:layout_width="@dimen/_45sdp"
                                        android:layout_height="@dimen/_45sdp"
                                        android:layout_gravity="center"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/events"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        app:tint="@color/white" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:text="News/Events"
                                        android:padding="@dimen/_3sdp"
                                        android:fontFamily="@font/roboto"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12ssp"
                                        android:textStyle="bold" />


                                </LinearLayout>


                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView

                                android:id="@+id/admin"
                                android:layout_width="@dimen/_110sdp"
                                android:layout_height="@dimen/_75sdp"
                                android:layout_marginLeft="15dp"
                                android:backgroundTint="#ECECEC"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground"
                                app:cardCornerRadius="@dimen/_7sdp"

                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:background="@drawable/g_color6"
                                    >

                                    <ImageView
                                        android:layout_width="@dimen/_48sdp"
                                        android:layout_height="@dimen/_45sdp"
                                        android:layout_gravity="center"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/admini"
                                        android:tint="@color/white"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:text="Administration"
                                        android:fontFamily="@font/roboto"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_13ssp"
                                        android:textStyle="bold" />


                                </LinearLayout>


                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <androidx.cardview.widget.CardView
                                android:id="@+id/epayment"
                                android:layout_width="@dimen/_110sdp"
                                android:layout_height="@dimen/_75sdp"
                                android:backgroundTint="#ECECEC"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground"
                                app:cardCornerRadius="@dimen/_7sdp"

                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:background="@drawable/g_color3"
                                    >

                                    <ImageView
                                        android:layout_width="@dimen/_48sdp"
                                        android:layout_height="@dimen/_45sdp"
                                        android:layout_gravity="center"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/payment"
                                        android:padding="@dimen/_2sdp"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        app:tint="@color/white" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="E-Payment"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/roboto"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:textSize="@dimen/_14ssp"
                                        android:textStyle="bold" />


                                </LinearLayout>


                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/result1"
                                android:layout_width="@dimen/_110sdp"
                                android:layout_height="@dimen/_75sdp"
                                android:layout_marginLeft="15dp"
                                android:backgroundTint="#ECECEC"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground"
                                app:cardCornerRadius="@dimen/_7sdp"

                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:background="@drawable/g_color"
                                    >

                                    <ImageView
                                        android:layout_width="@dimen/_48sdp"
                                        android:layout_height="@dimen/_45sdp"
                                        android:layout_gravity="center"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/result"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        app:tint="@color/white" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Results"
                                        android:fontFamily="@font/roboto"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_14ssp"
                                        android:textStyle="bold" />


                                </LinearLayout>


                            </androidx.cardview.widget.CardView>


                        </LinearLayout>


                    </LinearLayout>


                </ScrollView>

            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/website"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color"
            android:layout_above="@id/bottom_nav"
            android:visibility="gone"
            >

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimation"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_gravity="center"
                app:lottie_autoPlay="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/load4" />

            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/color"
            app:itemIconSize="@dimen/_22sdp"
            app:itemIconTint="@color/color_bottom"
            app:itemTextColor="@color/white"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom" />


    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_View"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/drawer"
        app:itemIconSize="@dimen/_25sdp"
        app:itemIconTint="@color/color"
        />



</androidx.drawerlayout.widget.DrawerLayout>