<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_3sdp"
    >

    <LinearLayout
        android:id="@+id/clicker"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_157sdp"
        android:background="@drawable/item2"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/picbg"
                android:layout_width="@dimen/_96sdp"
                android:layout_height="@dimen/_110sdp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                android:background="@drawable/corved"
                android:layout_gravity="center"
                android:elevation="@dimen/_3sdp"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_76sdp"
                    android:layout_height="@dimen/_92sdp"
                    android:elevation="12dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_gravity="center"
                    android:shape="ring"
                    android:thicknessRatio="1.9">

                    <ImageView

                        android:layout_height="@dimen/_92sdp"
                        android:layout_width="match_parent"
                        android:id="@+id/itempic"
                        android:src="@drawable/itempic"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true">
                    </ImageView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:layout_marginLeft="@dimen/_8sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameshow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bashir Ahmed"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    android:fontFamily="@font/font"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/profession"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Developer"
                    android:textColor="@color/color"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/numbershow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01734814602"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/mailshow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="bashir45.me@gmail.com"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#E2DFDF"
            android:layout_marginTop="@dimen/_5sdp"
            >
            <ImageView
                android:id="@+id/scall"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="@dimen/_105sdp"
                android:layout_height="@dimen/_35sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/call_24"/>
            <ImageView
                android:id="@+id/smail"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="@dimen/_105sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="#25009FB5"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/email_24"/>
            <ImageView
                android:id="@+id/sfb"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="@dimen/_105sdp"
                android:layout_height="@dimen/_35sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/fb1"
                android:tint="@color/color"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>